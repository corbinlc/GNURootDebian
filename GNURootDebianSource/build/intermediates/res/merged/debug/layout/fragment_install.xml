<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/install_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/install_textview_text"
        />

    <CheckBox
        android:id="@+id/sdcard_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/install_textview"
        android:text="Install on sdcard\n(smaller internal size and slower performance)" />

    <Button
        android:id="@+id/install_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sdcard_checkbox"
        android:text="@string/install_button_text" />

    <TextView
        android:id="@+id/patch_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/install_button"
        android:text="@string/patch_textview_text" />

    <Button
        android:id="@+id/patch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patch_textview"
        android:text="@string/patch_button_text" />
          
</RelativeLayout><!-- From: file:/home/corbin/StudioProjects/GNURootDebian/GNURootDebianSource/src/main/res/layout/fragment_install.xml -->